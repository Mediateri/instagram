<p> </p>
<% if logged_in? %>
  <% check = 0, links='1', id=nil %>
  <% @profiles.each do |profile| %>
    <% if current_user.id == profile.user_id %>
      <% check = 1%>
      <%links = profile.image.url %>
      <%id =profile%>
    <% end %>
<% end %>
<% if check==1 %>
  <%= image_tag links, class: "rounded-circle", size: "40x40" unless links.blank? %>
  <%= link_to 'Edit', edit_profile_path(id) %>
  <%= link_to 'All', profiles_path %>
  <% else %>
  <%= link_to 'you dont have user profile', new_profile_path %>
  <% end %>
<% end %>
<%= link_to 'New Post', new_post_path %>
<br>

    <% @posts.each do |post| %>
      <div class="marge">
      <div class="card ">
        <div class="card-header bg-primary">
          <p><%= post.user.name %>: <%= post.content %></p>
	      </div>
        <div class="card-body">
        <% if post.image_url %>
          <p><%= image_tag post.image.url, class: "img-fluid " %></p>
        <% end %>
	      </div>
        <div class="card-footer">
          <% if logged_in? %>
            <% if current_user.id == post.user_id %>
              <p><%= link_to 'Show', post %>
               <%= link_to 'Edit', edit_post_path(post) %>
               <%= link_to 'delete', post, method: :delete, data: { confirm: 'Are you sure?' } %></p>
          <% end %>
          <% unless post.user_id == current_user.id %>
            <% if @favorite.present? %>
              <%= link_to 'Cancel favorite', favorite_path(id: @favorite.id), method: :delete, class: 'btn btn-danger' %>
            <% else %>
              <%= link_to 'Make it a favorite', favorites_path(post_id: post.id), method: :post, class: 'btn btn-primary' %>
            <% end %>
          <% end %>
          
	      </div>
	    </div>
      </div>        
    <% end %>
      
    <% end %>




