
<button type="button" class="btn btn-primary btn-sm marge customDiv" data-toggle="modal" data-target="#myModal">

Log in model
</button>
<div class="modal" id="myModal">
  <div class="modal-dialog modal-sm">
    <div class="modal-content">

      <!-- Modal Header -->
      <div class="modal-header">
        <h4 class="modal-title">Your credentials</h4>
        <button type="button" class="close" data-dismiss="modal">&times;</button>
      </div>
      <div class="modal-body">
      <%= form_with(scope: :session, url: sessions_path, local: true) do |f| %>
        <div class="form-group">
        <%= f.label :email %>
        <%= f.email_field :email, class: "form-control form-control-sm" %>
      
        <%= f.label :password %>
        <%= f.password_field :password, class: "form-control form-control-sm" %>
      
       
        </div>
      
      </div>
      <div class="modal-footer">
        <%= f.submit "Log in", class: "btn btn-primary btn-sm" %>
        <button type="button" class="btn btn-danger btn-sm" data-dismiss="modal">Close</button>
        <% end %>
      </div>

    </div>
  </div>
</div>


